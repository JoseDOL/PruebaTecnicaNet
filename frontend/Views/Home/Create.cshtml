@model frontend.Models.Empleado

@{
    ViewData["Title"] = "Crear Empleado";
}

<div class="m-0 row justify-content-center align-items-center">
    <div class="col-auto text-center">
        <h1 class="bi bi-clipboard2-plus-fill">Crear Empleado</h1>
    </div>
</div>

<div class="m-0 row justify-content-center align-items-center ">
    <div class="card col-auto bg-secondary bg-gradient " style="width: 60rem;">
        <form class="card-body" asp-action="Create" method="post" class="employee-form" id="employeeForm">
            <div class="mb-3">
                <label asp-for="Codigo" class="control-label">Código</label>
                <input asp-for="Codigo" class="form-control" type="number" min="0" />
                <span asp-validation-for="Codigo" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Puesto" class="control-label">Puesto</label>
                <input asp-for="Puesto" class="form-control" />
                <span asp-validation-for="Puesto" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Nombre" class="control-label">Nombre</label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="CodigoJefe" class="control-label">Código Jefe</label>
                <input asp-for="CodigoJefe" class="form-control" type="number" min="0" />
                <span asp-validation-for="CodigoJefe" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input type="hidden" asp-for="EstaBorrado" value="false" />
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary create-button" />
            </div>
        </form>
    </div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}